<!-- Top Navigation Menu -->
<div class="topnav">
    <%= link_to("habits_path", class: "active") do %>
     <p><%= image_tag "image.png"%><strong style= "margin-inline: 10px;">TR8CK</strong></p>
    <% end %>
  <!-- Navigation links (hidden by default) -->
  <div id="myLinks">
    <%= link_to "My profile", edit_user_registration_path %>
    <%= link_to "My habits", habits_path %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete} %>
<%#
    <a href="#logout">Log Out</a> %>
  </div>
  <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <%# <i class="fa fa-bars" style="font-size: 0.73em;"></i> %>
    <i class="fa-solid fa-gear" style="font-size: 0.73em;"></i>
  </a>
</div>

<script>
function myFunction() {
  var x = document.getElementById("myLinks");
  if (x.style.display === "block") {
    x.style.display = "none";
  } else {
    x.style.display = "block";
  }
}
</script>
