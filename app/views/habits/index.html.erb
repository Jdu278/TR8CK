
<div class="main">
<div data-controller="search-habits">
  <div data-search-habits-target="habits">
      <% @habits.each do |habit| %>
        <a href="https://random.dog/" class="link">
          <div class="habitbody">
            <div class="habitallcontent">
              <div class="habittitle">
                <%= habit.title %>
          </div>
            <div class="habitinfo">
              <%= habit.description %>
            </div>
          </div>
        </div>
      </a>
    <% end %>
        <p class="h3">
          <%= form_with url: habits_path, method: :get, html: { class: "mb-4", data: { search_habits_target: "form" } } do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: "Find a Habit",
                           value: params[:query],
                           data: {
                             search_habits_target: "input",
                             action: "keyup->search-habits#update",
                           } %>
            <% end %>
    </div>


      </div>
  </div>
</div>

