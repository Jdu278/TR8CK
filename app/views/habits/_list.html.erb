<div class="lsitmain">
  <div>
    <div data-search-habits-target="habits">
      <% @habits.each do |habit| %>
        <a href="<%= habit_path(habit.id) %>" class="link" data-search-habits-target="habitcard">
          <div class="habitbody">
            <div class="habitallcontent">
              <div class="habittitle">
                <%= habit.title %>
              </div>
              <div class="habitinfo">
                <%= habit.description %>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
